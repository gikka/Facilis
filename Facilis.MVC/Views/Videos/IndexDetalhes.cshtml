@model IEnumerable<Facilis.MVC.ViewModels.VideoViewModel>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                <a href="@Url.Action("Download", "Videos", new { id = item.VideoId })" , class="btn btn-success" data-toggle="tooltip" data-placement="auto" title="Ver vídeo" target="_blank">
                    <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
