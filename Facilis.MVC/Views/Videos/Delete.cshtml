@model Facilis.MVC.ViewModels.VideoViewModel

@{
    ViewBag.Title = "Excluir vídeo";
}

<h2>Excluir vídeo</h2>

<h3>Confirma exclusão do vídeo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.URL)
        </dt>

        <dd>
