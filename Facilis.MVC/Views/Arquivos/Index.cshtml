@model IEnumerable<Facilis.MVC.ViewModels.ArquivoViewModel>

<p>
    @Html.ActionLink("Novo", "Create", "Arquivos", new { id = ViewData.ContainsKey("id") ? this.ViewData["id"].ToString() : string.Empty }, null)
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Ver arquivo", "Download", "Arquivos", new { id = item.ArquivoId }, new { target = "_blank" }) |
            @Html.ActionLink("Editar", "Edit", "Arquivos", new { id=item.ArquivoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Detalhes", "Details", "Arquivos", new { id=item.ArquivoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Excluir", "Delete", "Arquivos", new { id=item.ArquivoId }, new { htmlAttributes = new { @class = "form-control" } })
        </td>
    </tr>
}

</table>
