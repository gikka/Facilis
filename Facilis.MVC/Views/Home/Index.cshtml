@model IEnumerable<Facilis.MVC.ViewModels.EventoViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Facilis, o seu site de gerenciamento de eventos</h1>
    <p class="lead">Cadastre-se, crie e participe dos melhores eventos do Brasil e do mundo. Conecte-se a pessoas com os mesmos interesses que você. Facilis é uma plataforma muito fácil e simples de entender e utilizar.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
@foreach (var item in Model)
{
    <div class="col-md-3">
        <h2>@Html.DisplayFor(modelItem => item.Nome)</h2>
        <p>
            @Html.DisplayFor(modelItem => item.Descricao)
        </p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
}
</div>