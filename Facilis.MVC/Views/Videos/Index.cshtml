@model IEnumerable<Facilis.MVC.ViewModels.VideoViewModel>

<p>
    @Html.ActionLink("Create New", "Create", "Videos")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Details", "Details", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Delete", "Delete", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } })
        </td>
    </tr>
}

</table>
