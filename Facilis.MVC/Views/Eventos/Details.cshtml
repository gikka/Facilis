@model Facilis.MVC.ViewModels.EventoViewModel

@{
    ViewBag.Title = "Detalhes do evento";
}

<h2>Detalhes evento</h2>

<div class="container-fluid">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataInicial)
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.DataInicial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraInicial)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraInicial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataFinal)
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.DataFinal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoraFinal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoraFinal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuantidadeVagas)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantidadeVagas)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomePalestrante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomePalestrante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailPalestrante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailPalestrante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoEvento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoEvento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Arquivos
                </div>
                <div class="panel-body">
                    @Html.Partial("~/Views/Arquivos/IndexDetalhes.cshtml", Model.Arquivos, new ViewDataDictionary { { "id", Model.EventoId.ToString() } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Vídeos
                </div>
                <div class="panel-body">
                    @Html.Partial("~/Views/Videos/IndexDetalhes.cshtml", Model.Videos, new ViewDataDictionary { { "id", Model.EventoId.ToString() } })
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.EventoId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
</p>
