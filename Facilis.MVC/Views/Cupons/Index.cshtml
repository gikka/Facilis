@model IEnumerable<Facilis.MVC.ViewModels.CupomViewModel>

@{
    ViewBag.Title = "Cupons de desconto";
}

<h2>Cupom de desconto</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercentualDesconto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Validade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventoId)
        </th>
        <th>
            <a href="@Url.Action("Create")" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="Novo cupom">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentualDesconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}", item.Validade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Nome)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CupomId })" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="Alterar">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

                <a href="@Url.Action("Details", new { id = item.CupomId })" , class="btn btn-info" data-toggle="tooltip" data-placement="auto" title="Detalhes">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>

                <a href="@Url.Action("Delete", new { id = item.CupomId })" , class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="Excluir">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
