@model IEnumerable<Facilis.MVC.ViewModels.EventoViewModel>

@{
    ViewBag.Title = "Meus Eventos";
}

<h2>Meus Eventos</h2>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFinal)
        </th>
        <th>
            @Html.DisplayName("Vagas")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy} {1}", item.DataInicial, item.HoraInicial)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy} {1}", item.DataFinal, item.HoraFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeVagas)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.EventoId })" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="Alterar">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", new { id = item.EventoId })" , class="btn btn-info" data-toggle="tooltip" data-placement="auto" title="Detalhes">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.EventoId })" , class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="Excluir">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("ControleParticipantes", "Participantes", new { id = item.EventoId })" , class="btn btn-success" data-toggle="tooltip" data-placement="auto" title="Inscritos">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
