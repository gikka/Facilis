@model Facilis.MVC.ViewModels.ArquivoViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes arquivo</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dd>@Html.ActionLink("Ver arquivo","Download", new { id = Model.ArquivoId})</dd>
    </dl>
</div>
<div class="form-group row">
    <div class="col-md-12">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ArquivoId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Voltar", "Edit", "Eventos", new { id = Model.EventoId }, new { @class = "btn btn-default" })
    </div>
</div>
