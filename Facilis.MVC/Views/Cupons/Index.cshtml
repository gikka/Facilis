@model IEnumerable<Facilis.MVC.ViewModels.CupomViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Cupom de desconto</h2>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercentualDesconto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Validade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventoId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PercentualDesconto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Validade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Evento.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CupomId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CupomId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CupomId })
        </td>
    </tr>
}

</table>
