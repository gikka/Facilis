@model IEnumerable<Facilis.MVC.ViewModels.VideoViewModel>

<p>
    @Html.ActionLink("Novo", "Create", "Videos", new { id = ViewData.ContainsKey("id") ? this.ViewData["id"].ToString() : string.Empty }, null)
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Detalhes", "Details", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } }) |
            @Html.ActionLink("Excluir", "Delete", "Videos", new { id = item.VideoId }, new { htmlAttributes = new { @class = "form-control" } })
        </td>
    </tr>
}

</table>
