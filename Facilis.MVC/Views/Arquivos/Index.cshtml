@model IEnumerable<Facilis.MVC.ViewModels.ArquivoViewModel>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th style="text-align: center">
            <a href="@Url.Action("Create", "Arquivos", new { id = ViewData.ContainsKey("id") ? this.ViewData["id"].ToString() : string.Empty })" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="Novo arquivo">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <a href="@Url.Action("Download", "Arquivos", new { id = item.ArquivoId })" , class="btn btn-success" data-toggle="tooltip" data-placement="auto" title="Ver arquivo" target="_blank">
                <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Edit", "Arquivos",new { id = item.ArquivoId })" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="Alterar">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Details", "Arquivos", new { id = item.ArquivoId })" , class="btn btn-info" data-toggle="tooltip" data-placement="auto" title="Detalhes">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", "Arquivos", new { id = item.ArquivoId })" , class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="Excluir">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
