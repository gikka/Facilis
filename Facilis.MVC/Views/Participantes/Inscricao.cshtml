@model Facilis.MVC.ViewModels.ParticipanteViewModel
@{
    ViewBag.Title = "Inscrição";
}

<h2>Realizar inscrição em @Html.DisplayFor(model => model.Evento.Nome)</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EventoId)

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Usuario.Nome)
            @Html.EditorFor(model => model.Usuario.Nome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Usuario.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Usuario.Sobrenome)
            @Html.EditorFor(model => model.Usuario.Sobrenome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Usuario.Sobrenome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Usuario.Email)
            @Html.EditorFor(model => model.Usuario.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Usuario.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        @if (Model.Evento.TipoEvento == 2)
        {
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.CupomViewModel.Nome)
                @Html.EditorFor(model => model.CupomViewModel.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.FormaPagamento)
                @Html.DropDownListFor(model => model.FormaPagamento, ViewBag.FormaPagamentoList as SelectList, new { @class = "form-control" })
            </div>
        }
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <input type="submit" value="Finalizar inscrição" class="btn btn-primary" />
        </div>
     </div>
}

